{
  "name": "lucia",
  "version": "0.4.1",
  "description": "A tiny 3kb JavaScript library for prototyping web applications.",
  "main": "dist/lucia.cjs.js",
  "module": "dist/lucia.esm.js",
  "browser": "dist/lucia.min.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "dev": "npx rollup -c rollup-dev.config.js -w",
    "build": "npx del-cli dist/ && npx rollup -c",
    "test": "npx jest --coverage",
    "cleanup": "npx prettier -w src",
    "coverage": "cat ./coverage/lcov.info | coveralls"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aidenybai/lucia.git"
  },
  "exports": {
    "require": "./dist/index.cjs.min.js",
    "import": "./dist/index.esm.min.js",
    "node": "./dist/index.cjs.min.js",
    "default": "./dist/index.cjs.min.js"
  },
  "size-limit": [
    {
      "path": "dist/lucia.js",
      "limit": "10 KB"
    }
  ],
  "sideEffects": false,
  "keywords": [
    "lucia",
    "lucia.js",
    "tiny",
    "javascript",
    "library",
    "web",
    "ui",
    "browser"
  ],
  "author": "Aiden Bai <aiden.bai05@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aidenybai/lucia/issues"
  },
  "homepage": "https://lucia.js.org",
  "engines": {
    "node": ">=6.4.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-commonjs": "17.0.0",
    "@rollup/plugin-node-resolve": "11.1.0",
    "@size-limit/preset-app": "^4.9.1",
    "@testing-library/dom": "^7.28.1",
    "coveralls": "^3.1.0",
    "del-cli": "^3.0.1",
    "jest": "^26.6.1",
    "np": "^7.2.0",
    "prettier": "^2.1.2",
    "rollup": "2.38.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.29.0",
    "size-limit": "^4.9.1",
    "ts-jest": "^26.4.2",
    "typescript": "^4.1.2"
  },
  "jest": {
    "transform": {
      ".(ts)": "ts-jest"
    },
    "collectCoverageFrom": [
      "src/**/{!(index|browser|structs|collectAndInitDirectives|reactive),}.ts"
    ]
  }
}
