{
  "name": "lucia",
  "version": "0.4.7",
  "description": "3kb library for tiny web apps",
  "main": "dist/lucia.cjs.js",
  "module": "dist/lucia.esm.js",
  "browser": "dist/lucia.min.js",
  "types": "dist/types/index.d.ts",
  "scripts": {
    "dev": "npx esbuild src/browser.ts --bundle --watch --sourcemap --outfile=dist/lucia.js",
    "build": "npx del-cli dist/ && npx rollup -c",
    "test": "jest --coverage --silent",
    "cleanup": "prettier --write src --parser typescript",
    "coverage": "cat ./coverage/lcov.info | coveralls",
    "prepublishOnly": "npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aidenybai/lucia.git"
  },
  "exports": {
    "require": "./dist/lucia.cjs.min.js",
    "import": "./dist/lucia.esm.min.js",
    "node": "./dist/lucia.cjs.min.js",
    "default": "./dist/lucia.cjs.min.js"
  },
  "sideEffects": false,
  "keywords": [
    "lucia",
    "lucia.js",
    "tiny",
    "javascript",
    "library",
    "web",
    "ui",
    "browser"
  ],
  "author": "Aiden Bai <aiden.bai05@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aidenybai/lucia/issues"
  },
  "homepage": "https://lucia.js.org",
  "engines": {
    "node": ">=6.4.0"
  },
  "devDependencies": {
    "@babel/plugin-proposal-class-properties": "^7.12.1",
    "@babel/preset-env": "^7.12.11",
    "@babel/preset-typescript": "^7.12.7",
    "@rollup/plugin-babel": "^5.2.2",
    "@rollup/plugin-commonjs": "17.1.0",
    "@rollup/plugin-node-resolve": "11.2.1",
    "@testing-library/dom": "^7.28.1",
    "@types/jest": "^26.0.22",
    "coveralls": "^3.1.0",
    "del-cli": "^3.0.1",
    "esbuild": "^0.10.2",
    "jest": "^26.6.1",
    "prettier": "^2.1.2",
    "rollup": "2.42.4",
    "rollup-plugin-filesize": "^9.1.1",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.30.0",
    "ts-jest": "^26.4.2",
    "typescript": "^4.1.2"
  },
  "jest": {
    "transform": {
      ".(ts)": "ts-jest"
    }
  }
}
