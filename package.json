{
  "name": "lucia",
  "version": "0.1.2",
  "description": "Tiny library for tiny web apps.",
  "main": "dist/lucia.js",
  "browser": "dist/lucia.min.js",
  "scripts": {
    "dev": "del-cli dist/ && rollup -c -w",
    "build": "npm run build:src && npm run build:docs",
    "build:src": "del-cli dist/ && rollup -c",
    "build:docs": "typedoc --out docs src",
    "test": "jest --coverage",
    "coverage" : "cat ./coverage/lcov.info | coveralls"
  },
  "module": "dist/lucia.esm.min.js",
  "exports": {
    "require": "./dist/lucia.cjs.min.js",
    "import": "./dist/lucia.esm.min.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aidenybai/lucia.git"
  },
  "keywords": [
    "lucia",
    "lucia.js",
    "tiny",
    "javascript",
    "library",
    "web",
    "ui",
    "browser"
  ],
  "author": "Aiden Bai <aiden.bai05@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/aidenybai/lucia/issues"
  },
  "homepage": "https://lucia.js.org",
  "engines": {
    "node": ">=6.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.11.4",
    "@babel/plugin-proposal-class-properties": "^7.10.4",
    "@babel/preset-env": "^7.11.0",
    "@babel/preset-typescript": "^7.10.4",
    "@rollup/plugin-babel": "5.0.3",
    "@rollup/plugin-commonjs": "13.0.0",
    "@rollup/plugin-node-resolve": "8.0.1",
    "coveralls": "^3.1.0",
    "del-cli": "^3.0.1",
    "jest": "^26.6.1",
    "rollup": "2.15.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^26.4.2",
    "typedoc": "^0.19.2",
    "typescript": "^4.0.3"
  },
  "jest": {
    "transform": {
      ".(ts)": "ts-jest"
    }
  }
}
